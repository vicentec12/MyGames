<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.vicentec12.mygames">

    <application
        android:name=".MyGamesApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.console.ConsoleActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.game.GameActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.add_game.AddGameActivity"
            android:label="@string/title_activity_add_games"
            android:launchMode="singleTop" />
    </application>

</manifest>